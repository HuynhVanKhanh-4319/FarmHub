    <script>
        document.getElementById('logoutLink').addEventListener('click', function (event) {
            event.preventDefault(); // Ngăn chặn việc tải lại trang

            // Tạo một form ẩn
            var form = document.createElement('form');
            form.method = 'POST';
            form.action = '/Identity/Account/Logout'; // Đường dẫn tới trang Logout của bạn

            // Tạo một input ẩn để bảo mật với ASP.NET Core chống tấn công CSRF
            var input = document.createElement('input');
            input.type = 'hidden';
            input.name = '__RequestVerificationToken';
            input.value = document.querySelector('input[name="__RequestVerificationToken"]').value;

            // Thêm input vào form và gửi form
            form.appendChild(input);
            document.body.appendChild(form);
            form.submit();
        });
    </script>
