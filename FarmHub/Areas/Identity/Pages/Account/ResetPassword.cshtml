@page
@model ResetPasswordModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Đặt lại mật khẩu - Nông Nghiệp Xanh</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="~/css/Register.css"> 
</head>
<body>
    <section class="py-5">
        <div class="container">
            <div class="row g-0 shadow-lg rounded-4 overflow-hidden">
                <!-- Left Side - Agriculture Theme (Giữ nguyên như Register) -->
                <div class="col-lg-6 agriculture-bg text-white d-flex align-items-center p-5 position-relative">
                    <div class="position-relative z-index-1 text-center w-100">
                        <img src="~/images/Logo_FarmHub.jpg" alt="Farm Logo" class="logo">
                        <h2 class="display-5 fw-bold mb-4">Chào mừng đến với Nông Nghiệp Xanh</h2>
                        <p class="lead">Kết nối cộng đồng nông dân <br> Chia sẻ kiến thức và phát triển bền vững</p>
                        <div class="d-flex justify-content-center gap-3 mt-4">
                            <div class="bg-white rounded-circle p-3 shadow">
                                <i class="fas fa-seedling fa-2x text-success"></i>
                            </div>
                            <div class="bg-white rounded-circle p-3 shadow">
                                <i class="fas fa-tractor fa-2x text-success"></i>
                            </div>
                            <div class="bg-white rounded-circle p-3 shadow">
                                <i class="fas fa-leaf fa-2x text-success"></i>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Right Side - Reset Password Form -->
                <div class="col-lg-6 bg-light p-5">
                    <div class="form-container p-4">
                        <h3 class="text-center mb-4" style="color: var(--text-dark);">
                            <i class="fas fa-key me-2"></i>Đặt lại mật khẩu
                        </h3>

                        <form id="resetPasswordForm" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input asp-for="Input.Code" type="hidden" />

                            <div class="form-group mb-4">
                                <i class="fas fa-envelope input-icon"></i>
                                <input asp-for="Input.Email" class="form-control ps-5" placeholder="Email" autocomplete="off" />
                                <span asp-validation-for="Input.Email" class="text-danger small"></span>
                            </div>

                            <div class="form-group mb-4">
                                <i class="fas fa-lock input-icon"></i>
                                <input asp-for="Input.Password" class="form-control ps-5" id="Input_Password" placeholder="Mật khẩu mới" autocomplete="off" />
                                <span asp-validation-for="Input.Password" class="text-danger small"></span>
                            </div>

                            <div class="form-group mb-4">
                                <i class="fas fa-check-circle input-icon"></i>
                                <input asp-for="Input.ConfirmPassword" class="form-control ps-5" id="Input_ConfirmPassword" placeholder="Xác nhận mật khẩu" autocomplete="off" />
                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
                            </div>

                            <div class="form-group mb-4 form-check">
                                <input type="checkbox" class="form-check-input" id="showPasswordCheckbox">
                                <label class="form-check-label" for="showPasswordCheckbox">Hiển thị mật khẩu</label>
                            </div>

                            <button type="submit" class="btn btn-primary w-100 rounded-pill mb-3">
                                <i class="fas fa-sync-alt me-2"></i>Đặt lại mật khẩu
                            </button>
                        </form>

                        <div class="text-center mt-4">
                            <p class="mb-0">
                                <a href="/Identity/Account/Login" class="text-success text-decoration-none fw-bold">
                                    <i class="fas fa-arrow-left me-2"></i>Quay lại đăng nhập
                                </a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.getElementById('showPasswordCheckbox').addEventListener('change', function () {
            const passwordInput = document.getElementById('Input_Password');
            const confirmPasswordInput = document.getElementById('Input_ConfirmPassword');
            const type = this.checked ? 'text' : 'password';
            passwordInput.type = type;
            confirmPasswordInput.type = type;
        });
    </script>
</body>
</html>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}