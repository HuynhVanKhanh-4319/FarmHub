@page
@model RegisterModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Đăng ký - Nông Nghiệp Xanh</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="~/css/Register.css">
</head>
<body>
    <section class="py-5">
        <div class="container">
            <div class="row g-0 shadow-lg rounded-4 overflow-hidden">
                <!-- Left Side - Agriculture Theme -->
                <div class="col-lg-6 agriculture-bg text-white d-flex align-items-center p-5 position-relative">
                    <div class="position-relative z-index-1 text-center w-100">
                        <img src="~/images/Logo_FarmHub.jpg"alt="Farm Logo" class="logo">
                        <h2 class="display-5 fw-bold mb-4">Chào mừng đến với Nông Nghiệp Xanh</h2>
                        <p class="lead">Kết nối cộng đồng nông dân <br> Chia sẻ kiến thức và phát triển bền vững</p>
                        <div class="d-flex justify-content-center gap-3 mt-4">
                            <div class="bg-white rounded-circle p-3 shadow">
                                <i class="fas fa-seedling fa-2x text-success"></i>
                            </div>
                            <div class="bg-white rounded-circle p-3 shadow">
                                <i class="fas fa-tractor fa-2x text-success"></i>
                            </div>
                            <div class="bg-white rounded-circle p-3 shadow">
                                <i class="fas fa-leaf fa-2x text-success"></i>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Right Side - Registration Form -->
                <div class="col-lg-6 bg-light p-5">
                    <div class="form-container p-4">
                        <h3 class="text-center mb-4" style="color: var(--text-dark);">
                            <i class="fas fa-user-plus me-2"></i>Tạo tài khoản mới
                        </h3>

                        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <div class="form-group mb-4">
                                <i class="fas fa-user input-icon"></i>
                                <input asp-for="Input.UserName" class="form-control ps-5" placeholder="Tên đăng nhập" />
                                <span asp-validation-for="Input.UserName" class="text-danger small"></span>
                            </div>

                            <div class="form-group mb-4">
                                <i class="fas fa-envelope input-icon"></i>
                                <input asp-for="Input.Email" class="form-control ps-5" placeholder="Email" />
                                <span asp-validation-for="Input.Email" class="text-danger small"></span>
                            </div>

                            <div class="form-group mb-4">
                                <i class="fas fa-lock input-icon"></i>
                                <input asp-for="Input.Password" class="form-control ps-5" placeholder="Mật khẩu" />
                                <span asp-validation-for="Input.Password" class="text-danger small"></span>
                            </div>

                            <div class="form-group mb-4">
                                <i class="fas fa-check-circle input-icon"></i>
                                <input asp-for="Input.ConfirmPassword" class="form-control ps-5" placeholder="Nhập lại mật khẩu" />
                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
                            </div>

                            <button type="submit" class="btn btn-primary w-100 rounded-pill mb-3">
                                <i class="fas fa-user-check me-2"></i>Đăng ký ngay
                            </button>
                        </form>

                        <div class="text-center mt-4">
                            <p class="mb-0">
                                Đã có tài khoản?
                                <a href="/identity/Account/Login" class="text-success text-decoration-none fw-bold">
                                    Đăng nhập tại đây
                                </a>
                            </p>
                        </div>

                        <div class="text-center my-4 position-relative">
                            <hr class="text-muted">
                            <span class="position-absolute top-50 start-50 translate-middle bg-white px-3 text-muted">Hoặc</span>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}