@model IEnumerable<Crop>
@{
    ViewData["Title"] = "Cây trồng";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ecotech2A - Nền tảng quản lý nông nghiệp thông minh</title>

</head>
<body>
    <!-- Hero Section -->
    <div class="hero">
        <div class="container">
            <h1>🌾 Farmhub- Nông nghiệp thời 4.0</h1>
            <p>Công cụ quản lý toàn diện cho mọi mùa vụ</p>
            <a href="#dangky" class="cta-button">Bắt đầu ngay →</a>
        </div>
    </div>
    <div class="container my-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="text-success">Danh sách cây trồng</h2>
            <a asp-action="Create" class="btn btn-success">+ Thêm cây trồng</a>
        </div>

        <div class="table-responsive">
            <table class="table table-bordered table-striped text-center align-middle">
                <thead class="table-success">
                    <tr>
                        <th>Tên cây</th>
                        <th>Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning me-2">
                                    <i class="fas fa-edit me-1"></i>Sửa
                                </a>
                                <form asp-action="Delete" asp-route-id="@item.Id" method="post" style="display:inline">
                                    <button type="submit" class="btn btn-sm btn-danger">
                                        <i class="fas fa-trash-alt me-1"></i>Xoá
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>


</body>
</html>

