@model IEnumerable<Schedule>
@{
    ViewData["Title"] = "Lịch mùa vụ";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ecotech2A - Nền tảng quản lý nông nghiệp thông minh</title>

</head>
<body>
    
    <div class="hero">
        <div class="container">
            <h1>🌾 Farmhub- Nông nghiệp thời 4.0</h1>
            <p>Công cụ quản lý toàn diện cho mọi mùa vụ</p>
            <a href="#dangky" class="cta-button">Bắt đầu ngay →</a>
        </div>
    </div>
    <div class="container mt-5">
        <h2 class="text-success">Lịch hoạt động mùa vụ</h2>
        <a asp-action="Create" class="btn btn-success mb-3">+ Thêm lịch</a>

        <table class="table table-bordered table-striped text-center align-middle">
            <thead class="table-success">
                <tr>
                    <th>Ngày</th>
                    <th>Hoạt động</th>
                    <th>Mùa vụ</th>
                    <th>Hành động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Date.ToString("dd/MM/yyyy")</td>
                        <td>@item.Activity</td>
                        <td>@item.Season?.Name</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Sửa</a>
                            <form asp-action="Delete" asp-route-id="@item.Id" method="post" style="display:inline">
                                <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Bạn có chắc muốn xoá không?')">Xoá</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</body>
</html>







